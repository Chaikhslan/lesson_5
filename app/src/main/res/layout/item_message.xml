<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/chat_user_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_item_1"
        android:padding="@dimen/appPadding"
        android:layout_margin="@dimen/appPadding"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Салам калайсын?" />

    <TextView
        android:id="@+id/chat_user_message_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_item_2"
        android:padding="@dimen/appPadding"
        android:layout_margin="@dimen/appPadding"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/chat_user_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/appPadding"
        tools:text="Салам калайсын?" />

</androidx.constraintlayout.widget.ConstraintLayout>


